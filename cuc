#!/usr/bin/env ruby

args = ARGV.map do |arg|
  name, line = *arg.split(':')
  line = ":#{line}" if line
  "features/#{name}.feature#{line}"
end

script = if File.directory?(".bundle")
           args.unshift("exec", "cucumber")
           "bundle"
         elsif File.executable?('script/cucumber')
           'script/cucumber'
         else
           'cucumber'
         end


ENV['CUCUMBER_FORMAT'] ||= 'pretty'

exec(script, *args)
